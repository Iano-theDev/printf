#include "main.h"
#include <stdarg.h>

/**
 * process_sp - processes the format specifier to use
 * @spec: specifier
 * @ap: argument pointer;
 * @count: couter
 * @j: integer
 * Return: void
 */
void process_sp(char spec, va_list ap, unsigned int j, unsigned int count)
{
	switch (spec)
	{
	case 's':
		for (; j < count; j++)
		{
			char *str = va_arg(ap, char*);
			print_str(str);
		}
		break;
	case 'c':
		for (; j < count; j++)
		{
			char temp = va_arg(ap, int);
			_putchar(temp);
		}
		break;
	case 'd':
		for (; j < count; j++)
		{
			int num = va_arg(ap, int);
			printf("%d", num);
		}
		break;
	}
}
